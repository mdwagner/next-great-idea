{
  "name": "next-great-idea-ionic",
  "version": "0.1.0",
  "description": "NextGreatIdea (ionic)",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "serve": "ionic serve",
    "ionic:start": "react-scripts start",
    "ionic:build": "react-scripts build",
    "ionic:test": "react-scripts test",
    "gql:generate": "npm run gql:download-schema && npm run gql:codegen",
    "gql:download-schema": "apollo client:download-schema src/graphql/schema.json --endpoint http://host.docker.internal:8080/v1/graphql --header 'X-Hasura-Admin-Secret: secret'",
    "gql:codegen": "apollo client:codegen --localSchemaFile=src/graphql/schema.json --target=typescript --includes='src/**/*.{ts,tsx}' --tagName=gql --globalTypesFile=src/graphql-global-types.d.ts --tsFileExtension='d.ts' types"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@capacitor/core": "2.1.0",
    "@ionic/react": "^5.0.7",
    "@ionic/react-router": "^5.0.7",
    "apollo-boost": "^0.4.9",
    "graphql": "^15.0.0",
    "ionicons": "^5.0.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-hook-form": "^6.0.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@capacitor/cli": "2.1.0",
    "@ionic/cli": "^6.9.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.0.3",
    "@types/jest": "^24.0.25",
    "@types/node": "^12.12.24",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "react-scripts": "3.4.1",
    "typescript": "3.8.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
